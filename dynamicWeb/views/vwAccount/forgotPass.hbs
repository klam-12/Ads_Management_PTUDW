<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>Forgot password</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
        <link rel="stylesheet" href="/static/css/globalStyle.css">
        <link rel="stylesheet" href="/static/css/blob.css">   
        <link rel="stylesheet" href="/static/css/layout.css">   

    </head>
    <body class="bg-light">
        <div id="errorContainer">
            {{#if this.msg}}
                <div class="alert alert-danger text-center center error-noti" role="alert">
                    <div class="d-inline-flex">
                        <h4><i class="bi bi-x-circle-fill"></i> <span>&nbsp;</span> </h4>
                        <h5>{{this.msg}}</h5>
                    </div>
                    <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="alert" aria-label="Close">OK</button>
                </div>
            {{/if}}
        </div>

        <div class='container'>
            <div class="blob topleft-pos"></div>
            <div class="blob botright-pos"></div>

            <div class="container">
                <form method="post" action="/auth/change-password" class="position-absolute top-50 start-50 translate-middle p-5 custom-form box-shadow">
                    <div class="row mb-3 text-center fw-bold info-color heading-size">
                        <label for="form-title">Nhập email để nhận mã OTP</label>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 d-flex justify-content-between">
                            <label for="txtEmail" class="form-label fw-semibold info-color">Email</label>
                            <div id="errMess" class="form-text text-danger">Email không hợp lệ</div>
                        </div>
                        <input type="email" class="form-control" id="txtEmail" name="email" placeholder="email@gmail.com" autofocus>
                    </div>

                    <div class="row d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary fw-semibold p-2">Gửi mã OTP</button>
                    </div>
                </form>
            </div>


        </div>

        <script src='https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js'></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
    </body>
</html>