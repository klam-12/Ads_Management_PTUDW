<div class="add-form-container container-fluid form-center p-5 d-none">
    <div class="card-container shadow center w-50">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="blue-heading">Thêm mới</h5>
                <span class="add-warning text-danger d-none">Không để trống tên phường</span>
            </div>
            <div class="card-body">
                <form action="" id="addForm">
                    <div class="row mb-3">
                        <label for="wardName" class="col-sm-3 col-form-label fw-semibold">Tên phường</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="wardName" name="wardName">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center fw-semibold">
                            <button type="submit" class="btn btn-primary">Thêm</button>
                            <a class="btn btn-outline-primary add-btn-close me-2">Thoát</a>
                        </div>
                    </div>
