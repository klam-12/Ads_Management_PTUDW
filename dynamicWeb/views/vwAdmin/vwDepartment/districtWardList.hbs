{{#section 'js'}}
  <script>
    $('tr.district-row').click(function() {
        $('.ward-default').addClass('d-none');
        $('.ward-table').removeClass('d-none');
        $('tr.district-row').removeClass('row-active')
        $(this).addClass('row-active');
    });

    $('a#btnEdit').click(function() {
        $('div.edit-form-container').removeClass('d-none');
    });

    $('a#btnAdd').click(function() {
        if(!$('div.ward-table').hasClass('d-none')){
            $('div.add-form-container').removeClass('d-none');
        }
    });

    $('a#btnDelete').click(function() {
        $('div.delete-confirm').removeClass('d-none');
    });

    $('div.edit-form-container form').submit(function(e){
        e.preventDefault();
        if($('#editForm').find('input[name="wardNewName"]').val().length === 0){
            $('span.edit-warning').removeClass('d-none');
        }
        else{
            $('div.update-confirm').removeClass('d-none');
            if(!$('span.edit-warning').hasClass('d-none')){
                $('span.edit-warning').addClass('d-none');
            }
        }
    });

    $('div.add-form-container form').submit(function(e){
        e.preventDefault();
        if($('#addForm').find('input[name="wardName"]').val().length === 0){
            $('span.add-warning').removeClass('d-none');
        }
        else{
            $('div.create-confirm').removeClass('d-none');
            if(!$('span.add-warning').hasClass('d-none')){
                $('span.add-warning').addClass('d-none');
            }
        }
    });

    $('a.edit-btn-close').click(function(){
        $('div.edit-form-container').addClass('d-none');
        $('div.edit-form-container form')[0].reset();
    });

    $('a.add-btn-close').click(function(){
        $('div.add-form-container').addClass('d-none');
        $('div.add-form-container form')[0].reset();
    });

    $('div.create-confirm a.btn').click(function() {
        $('div.create-confirm').addClass('d-none');
        //$('div.add-form-container form').submit();
    });

    $('div.update-confirm a.btn').click(function() {
        $('div.update-confirm').addClass('d-none');
        //$('div.edit-form-container form').submit();
    });

    $('a.btn-yes').click(function() {
        $('div.delete-confirm').addClass('d-none');
    });

    $('a.btn-no').click(function() {
        $('div.delete-confirm').addClass('d-none');
    });
  </script>
{{/section}}

